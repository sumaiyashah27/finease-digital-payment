{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "finease-backend",
      "image": "YOUR_AWS_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/finease-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        { "hostPort": 5000, "containerPort": 5000 }
      ],
      "environment": [
        { "name": "PORT", "value": "5000" },
        { "name": "MONGODB_URI", "value": "your-mongodb-atlas-uri" },
        { "name": "STRIPE_SECRET_KEY", "value": "sk_test_yourkey" },
        { "name": "JWT_SECRET", "value": "your_jwt_secret" }
      ]
    }
  ]
}
